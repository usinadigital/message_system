<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="br.usinadigital.msgsystemws.model">
	<class name="Message" table="message">
		<id name="id" column="id">
			<generator class="native"/>
		</id>
		<property name="text" column="text" />
		<property name="lastupdate" column="lastupdate" />
		<set name="categories" table="message_category" inverse="false" lazy="true" fetch="select" cascade="all" >
            <key>
                <column name="message_id" not-null="true" />
            </key>
            <many-to-many entity-name="br.usinadigital.msgsystemws.model.Message">
				<column name="id" not-null="true" />
        	</many-to-many>
        </set>
	</class>	
</hibernate-mapping>
